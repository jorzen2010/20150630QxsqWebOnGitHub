@model QxsqWebAdmin.Models.GuahaoAddViewModel
@{
    ViewBag.Title = "新增挂号";
}

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">

        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- top row -->
        <div class="row">
            <div class="col-xs-12 connectedSortable">

            </div><!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">@ViewBag.Title</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                  @using (Html.BeginForm("GuahaoInsert", "Guahao", FormMethod.Post))
    {     
                     
                       @Html.ValidationSummary(true)

                      <div class="box-body">
                          <div class="form-group">

                              @Html.LabelFor(model => model.GuahaoName)  @Html.ValidationMessageFor(model => model.GuahaoName)
                              @Html.TextBoxFor(model => model.GuahaoName, new { @class = "form-control" })


                          </div>
                          <div class="form-group">

                              @Html.LabelFor(model => model.GuahaoTime)  @Html.ValidationMessageFor(model => model.GuahaoTime)
                              @Html.TextBoxFor(model => model.GuahaoTime, new { @class = "form-control" })


                          </div>
                          <div class="form-group">

                              @Html.LabelFor(model => model.GuahaoTel)  @Html.ValidationMessageFor(model => model.GuahaoTel)
                              @Html.TextBoxFor(model => model.GuahaoTel, new { @class = "form-control" })


                          </div>


                          <div class="form-group">

                              @Html.LabelFor(model => model.GuahaoInfo)  @Html.ValidationMessageFor(model => model.GuahaoInfo)
                              @Html.TextAreaFor(model => model.GuahaoInfo, new { @class = "form-control" })


                          </div>

                           
                           
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">立刻保存</button>
                        </div>
                  }
                </div><!-- /.box -->



            </div><!--/.col (left) -->
            <!-- right column -->
            <!--/.col (right) -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</aside>