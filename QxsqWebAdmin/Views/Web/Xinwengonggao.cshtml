@{
    Layout = "~/Views/Shared/_layoutWeb.cshtml";
    ViewBag.Title = "新闻公告";
    int i = 1;
}
<link href="/css/page.css" rel="stylesheet" type="text/css" />

	<!----start-content----->
<div class="content">
    <div class="wrap">
        <div class="services1">
            <div class="service-content">
                <h3>最新新闻</h3>

@foreach (var item in Model)
            {
                
                <ul>
                    <li><span>@i.</span></li>
                    <li>
                    
                    <p>
                            <a href="/Web/Article/@item.ArticleId"><b>【@item.ArticleClass】</b>@item.ArticleTitle</a>
                        @item.ArticleInfo
                        </p></li>
                    <div class="clear"> </div>
                </ul>
                i++;
    
            }
                共 @ViewBag.RecordCount 条新闻 <div class="SkyPager"></div>
            </div>
            @{Html.RenderAction("LeftMenuView", "Web");}
            <div class="clear"> </div>
        </div>
        <div class="clear"> </div>
    </div>
    <!----End-content----->
</div>
<!---End-wrap---->



@section scripts{
<script src="/js/JSsite.js" type="text/javascript"></script>
<script src="/js/jquery.pager.js" type="text/javascript"></script>
    <script type="text/javascript">

        var pageNo = @ViewBag.PageNo;
        var pageCount = @ViewBag.PageCount;
        var RecordCount=@ViewBag.RecordCount;

        $(function() {

            if (pageCount == 0) {
                 $(".SkyPager").hide();

            }
            $(".SkyPager").pager({ pagenumber: pageNo, pagecount: pageCount, buttonClickCallback: PageClick });
        });

        PageClick = function(no) {
            window.location = "?p=" + no;
        }





       

    </script>



}