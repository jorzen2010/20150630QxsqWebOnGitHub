@model QxsqWebAdmin.Models.ArticleEditViewModel
@{
    ViewBag.Title = "文章编辑";
}

<link href="/umeditor/themes/default/css/umeditor.css" type="text/css" rel="stylesheet">

<script type="text/javascript" charset="utf-8" src="/umeditor/umeditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="/umeditor/umeditor.min.js"></script>
<script type="text/javascript" src="/umeditor/lang/zh-cn/zh-cn.js"></script>

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">

        <!-- Small boxes (Stat box) -->
        <!-- /.row -->
        <!-- top row -->
        <div class="row">
            <div class="col-xs-12 connectedSortable">

            </div><!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">@ViewBag.Title</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                  @using (Html.BeginForm("ArticleUpdate", "Article", FormMethod.Post))
    {     
                      @Html.HiddenFor(model => model.ArticleId)
                        @Html.ValidationSummary(true)
                      <div class="box-body">
                            <div class="form-group">

                                @Html.LabelFor(model => model.ArticleTitle)  @Html.ValidationMessageFor(model => model.ArticleTitle)
                                @Html.TextBoxFor(model => model.ArticleTitle, new { @class = "form-control" })
                              
                               
                            </div>
                          <div class="form-group">

                              @Html.LabelFor(model => model.ArticleClass)
                              @Html.ValidationMessageFor(model => model.ArticleClass)
                              @Html.DropDownListFor(model => model.ArticleClass, ViewData["ArticleClassList"] as IEnumerable<SelectListItem>, new { @class = "form-control" })


                          </div>
                          <div class="form-group">

                              @Html.LabelFor(model => model.ArticleInfo)  @Html.ValidationMessageFor(model => model.ArticleInfo)
                              @Html.TextAreaFor(model => model.ArticleInfo, new { @class = "form-control" })


                          </div>
                            <div class="form-group">
                                
                                    @Html.LabelFor(model => model.ArticleImg)  @Html.ValidationMessageFor(model => model.ArticleImg)
                                    @Html.EditorFor(model => model.ArticleImg, new { @class = "form-control" })
                                 
                            
                            </div>
                   
                          <div class="form-group">
                              @Html.LabelFor(model => model.ArticleContent)  @Html.ValidationMessageFor(model => model.ArticleContent)
                              <textarea id="myEditor" name="ArticleContent" style="width:1000px;height:240px;">
                                  @Html.Raw(Model.ArticleContent)
                              </textarea>
                          </div>
                          <div class="form-group">

                              @Html.LabelFor(model => model.ArticleTop)  @Html.ValidationMessageFor(model => model.ArticleTop)
                              &nbsp;&nbsp;&nbsp;&nbsp;@Html.EditorFor(model => model.ArticleTop, new { @class = "form-control" })
                              &nbsp;&nbsp;&nbsp;&nbsp;
                              @Html.LabelFor(model => model.ArticleHot)  @Html.ValidationMessageFor(model => model.ArticleHot)
                              &nbsp;&nbsp;&nbsp;&nbsp;@Html.EditorFor(model => model.ArticleHot, new { @class = "form-control" })
                              &nbsp;&nbsp;&nbsp;&nbsp;
                              @Html.LabelFor(model => model.ArticleImportant)  @Html.ValidationMessageFor(model => model.ArticleImportant)
                              &nbsp;&nbsp;&nbsp;&nbsp; @Html.EditorFor(model => model.ArticleImportant, new { @class = "form-control" })


                          </div>
                           

                           
                        

                           
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">立刻保存</button>
                        </div>
                  }
                </div><!-- /.box -->



            </div><!--/.col (left) -->
            <!-- right column -->
            <!--/.col (right) -->
        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</aside>

<script src="/js/ajaxfileupload.js"></script>

<script type="text/javascript">
    //实例化编辑器
    var um = UM.getEditor('myEditor');

    
</script>
